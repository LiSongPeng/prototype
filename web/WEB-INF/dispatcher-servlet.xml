    <mvc:cors>
        <mvc:mapping path="/**"
                     allowed-origins="*"
                     allowed-methods="POST, GET, OPTIONS, DELETE, PUT"
                     allowed-headers="Content-Type, Access-Control-Allow-Headers,Access-Control-Allow-Origin, Authorization, X-Requested-With"
                     allow-credentials="true" />
    </mvc:cors>
    <mvc:resources mapping="**/js/" location="/res/js/"/>
    <mvc:resources mapping="/fonts/**" location="/res/fonts/"/>
    <mvc:resources mapping="/css/**" location="/res/css"/>
    <mvc:resources mapping="/html/**" location="/WEB-INF/user/"/>
</beans>