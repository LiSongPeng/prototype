<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.i.DictionaryDao">
    <insert id="saveDictionary">
        insert into dic_form(dic_name,dic_type) values (#{dic_name},#{dic_type})
    </insert>
    <delete id="deleteDictionaryById">
        delete from dic_form where id=#{id}
    </delete>
    <select id="listDictionary" resultMap="dictionaryMap">
        select * from dic_form
    </select>
    <select id="selectDictionaryById" parameterType="int" resultMap="dictionaryMap">
        select * from dic_form where id=#{id}
    </select>
    <resultMap type="entity.Dictionary" id="dictionaryMap">
        <id column="id" property="id"/>
        <result column="dic_name" property="dic_name"/>
        <result column="dic_type" property="dic_type"/>
    </resultMap>
    <update id="updateDictionary" parameterType="entity.Dictionary">
        update dic_form
        set dic_name=#{dic_name},dic_type=#{dic_type}
        where id=#{id}
    </update>
</mapper>